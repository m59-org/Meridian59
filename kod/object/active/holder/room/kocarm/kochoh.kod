   ChooseStatues()
   {
      local oLore;

      if pbEverEntered
      {
         return Send(SYS,@GetFailureRsc);
      }

      pbEverEntered = TRUE;

      oLore = Send(SYS,@GetLore);
      if oLore = $
      {
         return Send(SYS,@GetFailureRsc);
      }

      Post(self,@CreateStatues);
%      Post(oLore,@ChooseCurrentBests);

      return Send(SYS,@GetPleaseWaitRsc);
   }

