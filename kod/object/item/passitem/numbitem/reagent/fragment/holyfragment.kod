HolyFragment is ElementalFragment

constants:

   include blakston.khd

resources:

   holy_fragment_name_rsc = "holy fragment"
   holy_fragment_icon_rsc = angledfragment.bgf
   holy_fragment_desc_rsc = \
      "This fragment of crystal holds solidified elemental essence that seems "
      "to have come from a plane of pure holiness."

   holy_fragment_name_plural_rsc = "holy fragments"

classvars:

   vrName = holy_fragment_name_rsc
   vrIcon = holy_fragment_icon_rsc
   vrDesc = holy_fragment_desc_rsc

   vrName_plural = holy_fragment_name_plural_rsc

   viValue_average = 110
   viBulk = 5
   viWeight = 2

   viFragmentColor = 116

properties:

   piNumber = 1

messages:

   GetForgeType()
   {
      return FORGE_HOLY;
   }

end
